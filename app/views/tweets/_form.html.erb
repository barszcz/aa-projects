<h2>New Tweet!</h2>
<form action="/tweets" method="POST" class="tweet-compose" data-tweets-ul="#feed">
  <input
      type="hidden"
      name="authenticity_token"
      value="<%= form_authenticity_token %>">

  <label>
    Content
    <textarea name="tweet[content]"></textarea>
  </label>
  <strong class="chars-left">140</strong>
  <br>

  <script type="text/template" charset="utf-8">
    <label>
      Mention

      <select name="tweet[mentioned_user_ids][]">
        <option></option>
        <% User.all.each do |user| %>
          <option value="<%= user.id %>"><%= user.username %></option>
        <% end %>
      </select>
    </label>
  </script>
  <br>

  <input type="Submit" value="Post Tweet!" class="dontclear">
</form>
