<h1><%= @track.title %></h1>
<h2><%= "By #{@track.band.name}, from #{@track.album.title}" %></h2>

<% if @track.lyrics %>
  <h2>Lyrics</h2>
  <pre><%= @track.lyrics %></pre>
<% end %>
<br><br>


<a href="<%= edit_track_url(@track) %>">Edit Track</a>
<br>
<a href="<%= album_url(@track.album) %>">Back to album</a>
<br><form id="form_id" action="<%= track_url(@track) %>" method="post">
  <%= auth_token_input %>
  <%= method_input("delete") %>
  <input type="submit" value="Delete track">

</form>
