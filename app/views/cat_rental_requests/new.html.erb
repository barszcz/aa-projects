    <h1>Create new rental request</h1>

    <form action="<%= cat_rental_requests_url %>" method="POST">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <select name="cat_rental_request[cat_id]">
        <option value="none">Choose a cat</option>
        <% @cats.each do |cat| %>
          <option value="<%= cat.id %>"><%= cat.name %></option>
        <% end %>
      </select>
    <br><br>
    <label for="cat_start_date">Start Date</label>
    <input type="date" name="cat_rental_request[start_date]" id="cat_start_date" value="<%= Date.today %>">
    <br><br>
    <label for="cat_end_date">End Date</label>
    <input type="date" name="cat_rental_request[end_date]" id="cat_end_date" value="<%= Date.today %>">
    <br><br>
    <input type="submit" value="Submit">
  </form>
