    <h1><%= @cat.name %></h1>

    <table border=5>
      <tr>
        <td>Name</td>
        <td><%= @cat.name %></td>
      </tr>
      <tr>
        <td>Color</td>
        <td><%= @cat.color %></td>
      </tr>
      <tr>
        <td>Sex</td>
        <td><%= @cat.sex %></td>
      </td>
      <tr>
        <td>Age</td>
        <td><%= @cat.age %> years old!</td>
      </tr>
      <% if @cat.description %>
      <tr>
        <td>Description</td>
        <td><%= @cat.description %></td>
      </tr>
      <% end %>
    </table>
    <br><br>
    Rental Requests
    <br><br>
    <table border=5>
      <tr>
        <td>Start Date</td>
        <td>End Date</td>
      </tr>
      <% CatRentalRequest.where(cat_id: @cat.id).order(:start_date).each do |req| %>
      <tr>
        <td><%= req.start_date %></td>
        <td><%= req.end_date %></td>
        <% if req.pending? %>
        <td>
          <form action="/cat_rental_requests/<%= req.id %>/approve" method="post">
            <input type="submit" value="Approve">
            <input type="hidden" name="_method" value="PATCH">
          </form>
        </td>
        <td>
          <form action="/cat_rental_requests/<%= req.id %>/deny" method="post">
            <input type="submit" value="Deny">
            <input type="hidden" name="_method" value="PATCH">
          </form>
        </td>
        <% end %>
      </tr>
      <% end %>
    </table>


    <br>
    <a href="/cats/<%= @cat.id %>/edit"> Edit <%= @cat.name %> </a>
